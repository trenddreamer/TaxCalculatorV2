@model TaxCalculator.Models.Entities.TaxResult

<br />
<h2 class="text-info">Calculate Tax</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Amount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PostalCodeID"></label>
            </div>
            <div class="col-6">
                <select asp-for="PostalCodeID" class="form-control" asp-items="ViewBag.PostalCode"></select>
                <span asp-validation-for="PostalCodeID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">

            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-success form-control">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

